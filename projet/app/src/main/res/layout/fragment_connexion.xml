<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragment.connexion.ConnexionFragment">
    <ImageView
        android:id="@+id/babyYoda_image"
        android:layout_width="247dp"
        android:layout_height="357dp"
        android:contentDescription="@string/baby_yoda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baby_yoda" />


    <Button
        android:id="@+id/connexion_button"
        android:layout_width="184dp"
        android:layout_height="73dp"
        android:text="@string/CONNEXION"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
        app:layout_constraintVertical_bias="0.132" />

    <TextView
        android:id="@+id/textView"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/singIn_title"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/babyYoda_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/babyYoda_image"
        app:layout_constraintVertical_bias="0.974" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="246dp"
        android:layout_height="42dp"
        android:inputType="textEmailAddress"
        android:shadowColor="#FFFFFF"
        style="@style/text"
        android:ems="10"
        android:hint="@string/Email"
        android:textColorHint="@color/white"

        android:completionThreshold="0"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/babyYoda_image"
        app:layout_constraintVertical_bias="0.045" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/red"
        android:tint="@android:color/white"
        android:src="@drawable/corona"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>